<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.unb.mayur.vadodara_guide.Help">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\n“HELP/F.A.Q”\n"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:background="#00BCD4"
        android:gravity="center"

        android:textStyle="bold|italic" />



    <TextView

            android:layout_width="wrap_content"
            android:layout_margin="7dp"
            android:text="Q-Why we made this App?"
            android:layout_height="wrap_content"
        android:textStyle="bold">
            </TextView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_margin="7dp"
        android:text="-Because this app will provide you with a user-friendly interface and information about the places in and around VADODARA with GPS support for easy tracking."
        android:layout_height="wrap_content"
        >
    </TextView>


        <TextView
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:text="Q-Why not on ios,Windows Phone or any other Platform?"
            android:layout_height="wrap_content"

            android:textStyle="bold">


        </TextView>



    <TextView
        android:layout_margin="7dp"
        android:layout_width="wrap_content"
        android:text="-This was the basic information we covered up in the app. Further information and interactive features will be added in the forthcoming updates. Feel free to give us your suggestions and valuable feedback through our feedback tab made available for you."
        android:layout_height="wrap_content"

        >


    </TextView>


    <TextView
        android:layout_margin="7dp"
        android:layout_width="wrap_content"
        android:text="Q-Why only on Android platform?"
        android:layout_height="wrap_content"

        android:textStyle="bold">


    </TextView>
    <TextView
        android:layout_margin="7dp"
        android:layout_width="wrap_content"
        android:text="-As this was our maiden attempt we’ve focused on Android platform. We are making the developments on the ios platform and soon we will launch this app on ios market."
        android:layout_height="wrap_content"

        >
</TextView>

    <TextView
        android:layout_margin="7dp"
        android:layout_width="wrap_content"
        android:text="Q-How to get your business registered with us?"
        android:layout_height="wrap_content"

        android:textStyle="bold">


    </TextView>




    <TextView
        android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:text="-To register your business with us or any other business related queries, contact us through the feedback form provided in the app.\n\n"
            android:layout_height="wrap_content"

            >
            </TextView>


    <TextView
        android:layout_margin="7dp"
        android:layout_width="wrap_content"
        android:text="If you have any more queries, please send us through Feedback tab\n"
        android:layout_height="wrap_content"

        >
        </TextView>
     </LinearLayout>
    </ScrollView>
</LinearLayout>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8F5E9"
    android:layout_height="match_parent"
    tools:context="com.unb.mayur.theam_listview.detail"
    >




        <LinearLayout
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/l_ajwanimeta"
                android:id="@+id/imageView2"
                android:layout_weight="0.35"
                android:scaleType="fitXY"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight=".65"
                android:layout_height="0dp">


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Direction "
                android:id="@+id/button"
                android:onClick="Show_map"
                android:layout_margin="10dp"
                />




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


            <TextView

                android:textSize="20dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="B-17 Sahajanand Apartment,Ayurvedic 3 Rasta,Outside Panigate,Vadodara-390019

            +91 9428978604

            www.bhaibhaidabeliwala.com

            Timing:11:00Am - 8:30Pm"
            android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="00dp"
                android:layout_marginRight="00dp"
                android:padding="10dp"


                android:id="@+id/tv"



                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                style="@style/AppTheme"
                android:background="@android:color/transparent"
                android:elegantTextHeight="false"
                android:focusable="true"
                android:fontFamily="@string/abc_searchview_description_submit"
                android:outlineProvider="paddedBounds"
                android:shadowColor="#ff87ffc8"
                android:singleLine="false"
                android:textColor="#ff000000"
                android:textAlignment="viewStart" />

</ScrollView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

